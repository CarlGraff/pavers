<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control col-md-2' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control col-md-2'  %>
      </div>

      <div class="form-group">
       <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control col-md-2' %>
      </div>

      <div class="form-group">
       <%= f.label :password_confirmation, "Confirm" %>
       <%= f.password_field :password_confirmation, class: 'form-control col-md-2' %>
      </div>
      
      <div class="form-group">
       <%= f.submit "Create my account", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>